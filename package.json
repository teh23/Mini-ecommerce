{
    "name": "MEC",
    "private": true,
    "dependencies": {
        "@babel/preset-env": "^7.15.8",
        "babel-jest": "^27.2.5",
        "body-parser": "^1.19.0",
        "cors": "^2.8.5",
        "dotenv": "^10.0.0",
        "express": "^4.17.1",
        "jest": "^27.2.5",
        "mongoose": "^6.0.9",
        "nodemon": "^2.0.13",
        "react-test-renderer": "^17.0.2",
        "socket.io": "^4.2.0",
        "socket.io-client": "^4.2.0",
        "supertest": "^6.1.6",
        "websocket": "^1.0.34",
        "ws": "^8.2.3"
    },
    "nodemonConfig": {
        "ignore": [
            "*.test.js",
            "./client"
        ]
    },
    "jest": {
        "testPathIgnorePatterns": [
            "<rootDir>/client"
        ]
    },
    "scripts": {
        "client": "cross-env NODE_ENV=development npm start --prefix client",
        "server": "cross-env NODE_ENV=development nodemon --config ",
        "start": "node index.js",
        "dev:windows": "cross-env NODE_ENV=development concurrently \"npm run server\" \"npm run client\"",
        "dev:linux": "cross-env NODE_ENV=development npm run kill & npm run server & npm run client",
        "build": "SKIP_PREFLIGHT_CHECK=true NODE_ENV=production npm run build --prefix client",
        "install": "npm install --prefix client",
        "kill": "pkill -f nodemon",
        "test-server": "jest --watchAll --detectOpenHandles",
        "test-client": "cd client && npm run test",
        "test": "concurrently \"npm run test-server\" \"npm run test-client\""
    },
    "devDependencies": {
        "@babel/plugin-syntax-jsx": "^7.14.5",
        "@babel/preset-react": "^7.14.5",
        "cross-env": "^7.0.3"
    }
}
